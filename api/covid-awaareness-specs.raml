#%RAML 1.0
title: CODIV Essential Information -- Awareness service
baseURI: http://196.216.167.150:6547/covid/{version}
version: v1

/awareness/latest:
    displayName: Latest information about the virus
    description:
        get:
            description:
                responses:
                    200:
                        body:
                            text/plain:
								example: |
									["latest11", "latest2", "latest3",..., "latestn"]

